<Page x:ConnectionId='1' x:Class="TravelPacker.View.TravelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TravelPacker.View"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:TravelPacker.Model"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Your Travels"
                       Style="{ThemeResource HeaderTextBlockStyle}" />
            <GridView x:ConnectionId='2' x:Name="TravelsGV"
                                                              
                      IsItemClickEnabled="True">
                <GridView.ItemTemplate>
                    <DataTemplate                          >
                        <StackPanel x:Name="travelCard"
                                    Orientation="Horizontal">
                            <Image Source="https://randomwordgenerator.com/img/picture-generator/5ee6d6454d57b10ff3d8992cc12c30771037dbf852547848702a7ed4974c_640.jpg"
                                   Width="20" />
                            <StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </StackPanel>
    </ScrollViewer>
</Page>

