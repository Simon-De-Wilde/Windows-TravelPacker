<Page x:ConnectionId='1' x:Class="TravelPacker.View.Travels.TravelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TravelPacker.View.Travels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:TravelPacker.Model"
      xmlns:muxc="using:Windows.UI.Xaml.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      RequestedTheme="Light">

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Your Travels"
                       Style="{ThemeResource HeaderTextBlockStyle}" />
            <Button x:ConnectionId='2' Margin="0,10,0,0"
                                          >
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <SymbolIcon Symbol="Add"
                                Margin="5"
                                VerticalAlignment="Center" />
                    <TextBlock Text="Add new Travel"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <GridView x:ConnectionId='3' x:Name="TravelsGV"
                                                              
                      IsItemClickEnabled="True"
                      Margin="0,20,0,0"
                      HorizontalContentAlignment="Left"
                      IsRightTapEnabled="True"
                                               >
                <GridView.ItemTemplate>
                    <DataTemplate                          >
                        <StackPanel x:ConnectionId='4' x:Name="travelCard"
                                                                       
                                    IsRightTapEnabled="True"
                                    Background="White"
                                    Orientation="Horizontal"
                                    Width="450"
                                    MinHeight="160"
                                    BorderBrush="{ThemeResource ButtonBorderThemeBrush}"
                                    BorderThickness="3"
                                    CornerRadius="2"
                                    Margin="10">
                            <Image x:ConnectionId='5'                           
                                   Width="200"
                                   Margin="10" />
                            <StackPanel Orientation="Vertical"
                                        Padding="0,10,50,0"
                                        Width="220">
                                <TextBlock x:ConnectionId='6'                     
                                           TextWrapping="Wrap"
                                           Style="{ThemeResource TitleTextBlockStyle}" />
                                <TextBlock x:ConnectionId='7'                         
                                           TextWrapping="Wrap"
                                           Style="{ThemeResource SubtitleTextBlockStyle}" />
                                <muxc:ProgressBar x:ConnectionId='8'                           />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </StackPanel>
    </ScrollViewer>
</Page>

