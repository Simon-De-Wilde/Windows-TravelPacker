<Page x:ConnectionId='1' x:Class="TravelPacker.View.Travels.TravelListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TravelPacker.View.Travels"
      xmlns:model="using:TravelPacker.Model"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters">

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <TextBlock x:ConnectionId='2' Margin="10 0 0 20"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                                                             />
            <Grid BorderThickness="0 0 0 1"
                  BorderBrush="black"
                  Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Packinglist"
                           HorizontalAlignment="Center"
                           Grid.Column="0"
                           Padding="25 0 25 0"
                           Style="{ThemeResource TitleTextBlockStyle}"></TextBlock>
                <TextBlock Text="Tasks"
                           HorizontalAlignment="Center"
                           Grid.Column="1"
                           Padding="25 0 25 0"
                           Style="{ThemeResource TitleTextBlockStyle}"></TextBlock>
                <TextBlock Text="Route"
                           HorizontalAlignment="Center"
                           Grid.Column="2"
                           Padding="25 0 25 0"
                           Style="{ThemeResource TitleTextBlockStyle}"></TextBlock>
            </Grid>
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListView x:ConnectionId='3' x:Name="LVCategories"
                          Grid.Column="0">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListViewItem>
                        <Grid x:ConnectionId='7' x:Name="CategoryGrid" 
                              Background="#FFF2F2F2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <controls:Expander x:ConnectionId='8'  x:Name="EPCategory"
                                                IsExpanded="True"
                                                Background="#FFF2F2F2"
                                                Grid.Column="0">

                                <controls:Expander.Header>
                                    <TextBlock Text="Category_1" 
                                               FontWeight="Bold"/>
                                </controls:Expander.Header>

                                <ListView>
                                    <ItemsControl x:ConnectionId='10' x:Name="ItemsIC">
                                        <Grid x:ConnectionId='14' x:Name="ItemGrid" 
                                          Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:ConnectionId='15' x:Name="checkItem"
                                                  Grid.Column="0"
                                                  Content="Item_1" 
                                                  VerticalAlignment="Center" />

                                        <FontIcon x:ConnectionId='16' x:Name="RemoveItem" 
                                                  Grid.Column="1" 
                                                  FontFamily="Segoe MDL2 Assets" 
                                                  Glyph="&#xE74D;" 
                                                  Margin="10,0,10,0" 
                                                  HorizontalAlignment="Right" />
                                    </Grid>
                                    </ItemsControl>
                                    <ItemsControl>
                                        <Grid x:ConnectionId='11' x:Name="NewItemGrid" 
                                              Height="40">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox x:ConnectionId='12' x:Name="NewItemTitle" 
                                                     Grid.Column="0" 
                                                     PlaceholderText="Add new Item" 
                                                     VerticalAlignment="Center"
                                                     BorderBrush="Transparent"/>

                                            <FontIcon x:ConnectionId='13' x:Name="AddItem" 
                                                      Grid.Column="1" 
                                                      FontFamily="Segoe MDL2 Assets" 
                                                      Glyph="&#xE710;" 
                                                      Margin="10,0,10,0" 
                                                      HorizontalAlignment="Right"/>
                                        </Grid>
                                    </ItemsControl>
                                </ListView>

                            </controls:Expander>

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="10,10,10,0">
                                <TextBlock Text="0/" />

                                <TextBlock Text="1" FontWeight="Bold"/>

                                <FontIcon x:ConnectionId='9' x:Name="RemoveCategory" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE74D;" 
                                          Margin="20,0,0,0" 
                                          HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </ListViewItem>

                    <ItemsControl>
                        <Grid x:ConnectionId='4' x:Name="NewCategoryGrid" 
                              Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:ConnectionId='5' x:Name="NewCategoryTitle" 
                                     Grid.Column="0" 
                                     VerticalAlignment="Center" 
                                     PlaceholderText="Add new category" 
                                     Margin="30,0,0,0" 
                                     BorderBrush="Transparent"/>

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        Grid.Column="1">
                                <FontIcon x:ConnectionId='6' x:Name="AddCategory" 
                                          Grid.Column="1" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          Glyph="&#xE710;" 
                                          Margin="10,0,10,0" 
                                          HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </ItemsControl>

                </ListView>

                <!-- List of tasks -->
                <!-- Map + address -->
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>

