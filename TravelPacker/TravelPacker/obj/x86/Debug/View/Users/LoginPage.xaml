<Page x:Class="TravelPacker.View.Users.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TravelPacker.View.Users"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Background>
        <ImageBrush x:ConnectionId='2' x:Name="bgImage"
                    ImageSource="../../Assets/BackgroundImages/travelBG4.jpg"
                    Stretch="None" />
    </Page.Background>

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <StackPanel.Background>
            <AcrylicBrush TintOpacity="0.02"></AcrylicBrush>
        </StackPanel.Background>

        <TextBlock HorizontalAlignment="Center"
                   Text="Welcome to TravelPacker"
                   Margin="20,0,20,0"
                   Style="{ThemeResource HeaderTextBlockStyle}" />

        <TextBlock HorizontalAlignment="Center"
                   Text="Login"
                   Style="{ThemeResource SubtitleTextBlockStyle}" />
        <StackPanel HorizontalAlignment="Center"
                    Padding="50"
                    Margin="25"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Width="400">

            <!--email field-->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="E-mail"
                           HorizontalAlignment="Left" />
                <TextBox x:ConnectionId='7' x:Name="txt_email"
                         IsSpellCheckEnabled="False" />
            </StackPanel>

            <!--Password field-->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Password"
                           HorizontalAlignment="Left" />
                <PasswordBox x:ConnectionId='6' x:Name="txt_password" />
            </StackPanel>

            <!--Errors-->
            <StackPanel x:ConnectionId='3' Orientation="Vertical"
                        Margin="0,0,0,20"
                        x:Name="errorbox">

            </StackPanel>

            <!--Buttons-->
            <StackPanel Orientation="Horizontal"
                        Padding="-9"
                        HorizontalAlignment="Center">
                <Button x:ConnectionId='4' Content="Login"
                                            
                        Margin="10"
                        HorizontalAlignment="Center" />
                <Button x:ConnectionId='5'                        
                        Margin="10"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Go Register" />
                        <SymbolIcon Symbol="Forward"
                                    Margin="5,0,0,0" />
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>

    </StackPanel>
</Page>

